<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio_1._1.MainPage">
    
    <StackLayout Spacing="20" Margin="20">
        <Entry x:Name="numero1" Placeholder="Número 1" />
        <Entry x:Name="numero2" Placeholder="Número 2" />
        
        <Button Text="Suma" Clicked="OnSumaClicked" Padding="10,20"/>
        
        <Button Text="Resta" Clicked="OnRestaClicked" Padding="10,20"/>
        
        <Button Text="Multiplicación" Clicked="OnMultiplicacionClicked" Padding="10,20"/>
        
        <Button Text="División" Clicked="OnDivisionClicked" Padding="10,20" />
    </StackLayout>
</ContentPage>
